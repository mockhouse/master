<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="bcColor">#ff0d3200</color>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/BarTheme</item>
        <item name="android:radioButtonStyle">@style/DefaultRadioButtonTheme</item>
        <item name="android:buttonStyle">@style/DefaultButtonTheme</item>
        <item name="android:buttonStyleToggle">@style/DefaultToggleButtonTheme</item>
        <item name="android:textViewStyle">@style/DefaultTextViewTheme</item>
    </style>

    <style name="BarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/appThemeColor</item>
    </style>
    <style name="DefaultToggleButtonTheme" parent="DefaultButtonTheme">
    </style>
    <style name="DefaultButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/appThemeColor</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="QuizSelectionButton" parent="DefaultButtonTheme">
        <item name="android:background">@drawable/button_transperant</item>
    </style>
    <style name="DefaultRadioButtonTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/appThemeColor</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="DefaultTextViewTheme" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/appThemeColor</item>
        <item name="android:padding">10dp</item>
    </style>



</resources>